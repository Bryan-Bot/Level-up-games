<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <div class="form-input">
    <%= f.label :user_name %></br>
    <%= f.text_field :user_name %>
  </div>
  <div class="form-input">
    <%= f.label :email_address %></br>
    <%= f.text_field :email_address %>
  </div>
  <div class="form-input">
    <%= f.label :password %></br>
    <%= f.password_field :password %>
  </div>
  <div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>
<%= link_to "home", games_path%>